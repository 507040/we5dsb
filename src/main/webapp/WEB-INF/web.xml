<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>project1</display-name>
  <filter>
    <filter-name>Set Character Encoding</filter-name>
    <filter-class>
  		org.apache.catalina.filters.SetCharacterEncodingFilter
  	</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>Set Character Encoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>BolgController</servlet-name>
    <servlet-class>controller.BlogController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BolgController</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ShopController</servlet-name>
    <servlet-class>controller.ShopController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShopController</servlet-name>
    <url-pattern>*.pn</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BlogListController</servlet-name>
    <servlet-class>controller.BlogListController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BlogListController</servlet-name>
    <url-pattern>*.bl</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UploadController</servlet-name>
    <servlet-class>controller.UploadController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UploadController</servlet-name>
    <url-pattern>*.up</url-pattern>
  </servlet-mapping>
</web-app>